@using System.Data
@model System.Data.DataTable
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/css/jquery.dataTables.css" />
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"></script>  
    <script type="text/javascript" charset="utf-8">
        $(document).ready(function () {
            $('#datable').dataTable();
        });
    </script>
    <meta name="viewport" content="width=device-width" />
</head>

<body>
    <form method="post" name="Display">
        <br />
        @{
            if (Model.Rows.Count > 0)
            {
                <table id="datable" class="display">
                    <thead>
                        <tr>
                            <td>
                                Name
                            </td>
                            <td>
                                EmailID
                            </td>
                            <td>
                                MobileNo
                            </td>
                            <td>
                                Action
                            </td>
                        </tr>
                    </thead>
                    @foreach (DataRow dr in Model.Rows)
                    {
                        <tr>
                            <td>@dr["Name"].ToString() </td>
                            <td>@dr["EmailID"].ToString() </td>
                            <td>@dr["MobileNo"].ToString() </td>
                            <td>@Html.ActionLink("Edit ", "Edit", new { id = dr["ID"].ToString() })
                            @Html.ActionLink("| Delete", "Delete", new { id = dr["ID"].ToString() })
                            @Html.ActionLink("| Details", "Details", new { id = dr["ID"].ToString() })</td>
                        </tr>

                    }
                </table>
                <br />
            }
            else
            {
                <span> No records found!!</span>
            }
        }
    </form>
</body>
    
</html>